<!DOCTYPE html>
<html>
	<head>
	  <title>EasyDesign</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
	<% if notice %>
		<p class="notice"><%= notice %></p>
	<% end %>
	<% if alert %>
		<p class="alert"><%= alert %></p>
	<% end %>
		<header>
			<nav>
				<ul class="nav nav-tabs">
					<li>
						<%= link_to "Inicio", root_path %>
					</li>
					<li>
						<%= link_to "Posts", posts_path %>
					</li>
					<% if usuario_signed_in? %>
					<li>
						<%= link_to "Editar Perfil", edit_usuario_registration_path(current_usuario) %>
					</li>
					<li>
						<%= link_to "Mi Perfil", current_usuario %>
					</li>
					<li style="float: right">
						<%= link_to "Cerrar Session", destroy_usuario_session_path, method: :delete %>
					</li>
					<% else %>
					<li>
						<%= link_to "Ingresar", new_usuario_session_path %>
					</li>
					<li>
						<%= link_to "Registrarse", new_usuario_registration_path %>
					</li>
					<% end %>
				</ul>
			</nav>
		</header>
			<div class="container">
  			<div class="row">
  			
					<%= yield %>

				</div>
			</div>

	</body>
</html>
